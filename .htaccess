# Enable Rewrite Engine
RewriteEngine On

############################################
# 1. Force HTTPS + www (choose your style)
############################################

# ðŸ”¹ OPTION A: Force www + HTTPS
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [L,R=301]

# ðŸ”¹ OPTION B: Force non-www + HTTPS
# Uncomment this block instead if you prefer https://example.com (no www)
# RewriteCond %{HTTPS} !=on [OR]
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [L,R=301]


############################################
# 2. Clean URLs for PHP form handlers
############################################
# /apply/job   â†’ find-job.php
RewriteRule ^apply/job$ find-job.php [L]

# /apply/crew  â†’ find-crew.php
RewriteRule ^apply/crew$ find-crew.php [L]

# /apply/cv    â†’ upload-cv.php
RewriteRule ^apply/cv$ upload-cv.php [L]


############################################
# 3. Clean URLs for HTML pages (hide .html)
############################################
# Allow accessing pages without .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# Example:
#   /find-job   â†’ find-job.html
#   /find-crew  â†’ find-crew.html
#   /upload-cv  â†’ upload-cv.html


############################################
# 4. Redirect old .html links to clean versions (SEO)
############################################
RewriteRule ^find-job\.html$ find-job [R=301,L]
RewriteRule ^find-crew\.html$ find-crew [R=301,L]
RewriteRule ^upload-cv\.html$ upload-cv [R=301,L]
RewriteRule ^contact\.html$ contact [R=301,L]
RewriteRule ^index\.html$ index [R=301,L]
RewriteRule ^about\.html$ about [R=301,L]
RewriteRule ^services\.html$ services [R=301,L]
RewriteRule ^index\.html$ index [R=301,L]
RewriteRule ^about-us\.html$ about-us [R=301,L]
RewriteRule ^services\.html$ services [R=301,L]


